local CustomModifiers = loadstring(game:HttpGet('https://raw.githubusercontent.com/iimateiYT/Custom-Modifiers/main/Source.lua'))()
local FloorsAhead = 1

CustomModifiers:ToggleConnotations(true)

-- Creating a new modifier category
CustomModifiers:CreateCategory({
    Title = "Custom Hotel Gameplay",  -- Name of the category
    Sort = 0,  -- Display order
    Floor = "Hotel",  -- Floor where this category will appear
    Color = Color3.fromRGB(255, 50, 50)  -- Custom color for the category
})

-- Creating a new modifier category
CustomModifiers:CreateCategory({
    Title = "Custom Mines Modifiers",  -- Name of the category
    Sort = 0,  -- Display order
    Floor = "Mines",  -- Floor where this category will appear
    Color = Color3.fromRGB(255, 50, 50)  -- Custom color for the category
})

-- Creating a new modifier category
CustomModifiers:CreateCategory({
    Title = "Custom Hotel Modifiers",  -- Name of the category
    Sort = 0,  -- Display order
    Floor = "Hotel",  -- Floor where this category will appear
    Color = Color3.fromRGB(255, 50, 50)  -- Custom color for the category
})

-- Creating a new modifier category
CustomModifiers:CreateCategory({
    Title = "Custom Mines Gameplay",  -- Name of the category
    Sort = 0,  -- Display order
    Floor = "Mines",  -- Floor where this category will appear
    Color = Color3.fromRGB(255, 50, 50)  -- Custom color for the category
})

CustomModifiers:ReloadModifiers(FloorsAhead)

CustomModifiers:EnableFloor("Mines", true)

CustomModifiers:CreateModifier({
    Title = "TryHard Mode",  -- Name of the modifier
    Desc = "Made By victor072134.",  -- Description
    Color = Color3.fromRGB(255, 100, 100),  -- Modifier color
    Category = "Custom Hotel Gameplay",  -- Category where the modifier will be placed
    Sort = 1,  -- Modifier display order
    Bonus = -50,  -- Score penalty
    Solo = true,  -- This modifier cannot be combined with others
    Unlock = "EscapeHotel",  -- Unlocks after escaping the hotel
    Activation = [[
        loadstring(game:HttpGet("https://raw.githubusercontent.com/vct0721/Doors-Stuff/main/TryHard%20Mode%20Loader.lua"))()
    ]]
})

CustomModifiers:CreateModifier({
    Title = "Hardcore Mode",  -- Name of the modifier
    Desc = "Made By Nautic.",  -- Description
    Color = Color3.fromRGB(255, 100, 100),  -- Modifier color
    Category = "Custom Hotel Gameplay",  -- Category where the modifier will be placed
